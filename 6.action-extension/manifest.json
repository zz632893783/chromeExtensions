{
  "manifest_version": 3,
  "name": "周报生成器",
  "version": "1.0",
  "icons": {
    "16": "images/duck.png",
    "32": "images/duck.png",
    "48": "images/duck.png",
    "128": "images/duck.png"
  },
  "action": {
    "default_icon": {
      "16": "images/duck.png",
      "32": "images/duck.png",
      "48": "images/duck.png",
      "128": "images/duck.png"
    },
    "default_title": "傻瓜式一件周报生成器，需要事先登录禅道"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://10.10.120.20:8089/*"],
      "js": ["content.js"]
    }
  ]
}